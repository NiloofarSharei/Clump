psf_h=fits.open('psf_h.fits')[0]

psf=psf_h.data

ic=psf.shape[0]/2
jc=psf.shape[1]/2
def psf_f(R):
    f=0
    for i in range(psf.shape[0]):
        for j in range(psf.shape[1]):
            if np.sqrt((i-ic)**2+(j-jc)**2)<R:
                f=f+psf[i,j]
    return f
psf_f=np.vectorize(psf_f)


